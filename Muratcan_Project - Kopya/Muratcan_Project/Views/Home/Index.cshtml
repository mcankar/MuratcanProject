@model List<Post>

@{
   ViewData["Title"] = "Index";
   Layout = "~/Views/Shared/_Layout.cshtml"; 
 }


<div class="col-lg-8 mgr-50">
    <div class="blog-section mb-20">
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="trending" role="tabpanel" aria-labelledby="trending-tab">
                <div class="blog-items">
                    <div class="row">
                        @foreach (Post item in Model)
                        {
            <div class="col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="blog-item">
                    <div class="blog-img">
                        <img src="@item.ImagePath" alt="">
                    </div>
                    <div class="blog-info">
                        <h3 class="post-title"><a asp-controller="Home" asp-action="Post" asp-route-id="@item.ID" title="">@item.Title</a></h3>
                        <ul class="meta">
                            <li>@item.CreatedDate </li>
                            <li><i class="la la-eye"></i>@item.ViewCount</li>
                        </ul>
                    </div>
                </div>
            </div>}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>